<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        toolbar:title="@string/app_name"
        toolbar:titleTextColor="@color/colorWhite"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/volunteer_main_note"
        toolbar:layout_constraintBottom_toBottomOf="parent"
        toolbar:layout_constraintEnd_toEndOf="parent"
        toolbar:layout_constraintStart_toStartOf="parent"
        toolbar:layout_constraintTop_toBottomOf="@+id/toolbar"
        toolbar:layout_constraintVertical_bias="0.734" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="275dp"
        android:layout_height="247dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        toolbar:layout_constraintBottom_toBottomOf="parent"
        toolbar:layout_constraintEnd_toEndOf="parent"
        toolbar:layout_constraintHorizontal_bias="0.505"
        toolbar:layout_constraintStart_toStartOf="parent"
        toolbar:layout_constraintTop_toBottomOf="@+id/toolbar"
        toolbar:layout_constraintVertical_bias="0.125"
        toolbar:srcCompat="@drawable/blind_1" />

    <Button
        android:id="@+id/button"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:text="FAQ"
        android:textColor="@color/colorWhite"
        toolbar:layout_constraintBottom_toBottomOf="parent"
        toolbar:layout_constraintEnd_toEndOf="parent"
        toolbar:layout_constraintStart_toStartOf="parent"
        toolbar:layout_constraintTop_toTopOf="@+id/toolbar"
        toolbar:layout_constraintVertical_bias="0.944" />


</android.support.constraint.ConstraintLayout>